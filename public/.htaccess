<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Prefer index.php over index.html
  DirectoryIndex index.php index.html
  
  RewriteRule ^index\.php$ - [L]
  
  # Do not rewrite request for these file extensions to index.php if they don't exist (return 404)
  RewriteCond %{REQUEST_URI} !\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|mp4|webm)$ [NC]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.php [L]
</IfModule>

# Disable caching for HTML/PHP files to ensure latest version is always loaded
<FilesMatch "\.(html|htm|php)$">
  FileETag None
  <IfModule mod_headers.c>
    Header unset ETag
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
  </IfModule>
</FilesMatch>

# Ensure correct MIME types
AddType application/javascript .js
AddType text/css .css
